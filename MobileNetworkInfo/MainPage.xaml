                    <Label  Text="Network Information" Style="{StaticResource labelStyle1}"/>
                </Frame>

                <Label Grid.Column="0" Grid.Row="51" Text="Internet" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="51" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="51" x:Name="txtConnectivity" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="52" Text="Profiles" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="52" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="52" x:Name="txtConnectionType" Style="{StaticResource labelStyle2}"></Label>


                <Frame Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="53" Style="{StaticResource frameStyle}">

                    <Label Text="Other Information" FontSize="Small" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White" ></Label>
                </Frame>

                <Label Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="54" Text="" x:Name="temp" Style="{StaticResource labelStyle2}"></Label>


            </Grid>
