                <Label Grid.Column="0" Grid.Row="16"  ></Label>

                <Label Grid.Column="0" Grid.Row="17" Text="Pixel Width" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="17" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="17" x:Name="lblPixelWidth" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="18"  ></Label>

                <Label Grid.Column="0" Grid.Row="19" Text="Pixel Height" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="19" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="19" x:Name="lblPixelHeight" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="20"  ></Label>

                <Label Grid.Column="0" Grid.Row="21" Text="Pixel Density" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="21" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="21" x:Name="lblDensity" Style="{StaticResource labelStyle2}"></Label>

