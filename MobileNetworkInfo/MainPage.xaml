                <Label Grid.Column="0" Grid.Row="48" Text="Orientation Sensor" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="48" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="48" x:Name="lblOrientationSensor" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="49"  ></Label>

