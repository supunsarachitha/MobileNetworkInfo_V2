                <Label Grid.Column="0" Grid.Row="31" Text="Power Source" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="31" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="31" x:Name="lblPowerSource" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="32"  ></Label>

                <Label Grid.Column="0" Grid.Row="33" Text="Battery State" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="33" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="33" x:Name="lblBatteryState" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="34"  ></Label>

                <Frame Grid.ColumnSpan="3" Grid.Row="35" Style="{StaticResource frameStyle}">
                    <Label Text="Sensor Information" Style="{StaticResource labelStyle1}"></Label>
                </Frame>

                <Label Grid.Column="0" Grid.Row="36"  ></Label>

                <Label Grid.Column="0" Grid.Row="37" Text="Accelerometer" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="37" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="37" x:Name="lblAccel" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="38"  ></Label>

                <Label Grid.Column="0" Grid.Row="39" Text="Barometer" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="39" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="39" x:Name="lblBarometer" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="40"  ></Label>

                <Label Grid.Column="0" Grid.Row="41" Text="Compass" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="41" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="41" x:Name="lblCompass" Style="{StaticResource labelStyle2}"></Label>

                <Image Grid.Column="2" Grid.Row="42" Source="compass.png" x:Name="imgCompass"  Aspect="AspectFit" HeightRequest="50" HorizontalOptions="StartAndExpand"/>

                <Label Grid.Column="0" Grid.Row="43"  ></Label>

