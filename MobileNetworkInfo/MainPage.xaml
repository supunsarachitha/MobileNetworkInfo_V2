                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0"></Label>

                <Label Grid.Column="0" Grid.Row="1" Text="Model" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="1" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="1" x:Name="lblModel" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="2"  ></Label>

                <Label Grid.Column="0" Grid.Row="3" Text="Manufacturer" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="3" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="3" x:Name="lblManufacturer" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="4"  ></Label>

                <Label Grid.Column="0" Grid.Row="5" Text="Name" Style="{StaticResource labelStyle2}" ></Label>
                <Label Grid.Column="1" Grid.Row="5" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="5" x:Name="lblName" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="6"  ></Label>

                <Label Grid.Column="0" Grid.Row="7" Text="Version" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="7" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="7" x:Name="lblVersionString" Style="{StaticResource labelStyle2}"></Label>


                <Label Grid.Column="0" Grid.Row="8"  ></Label>

                <Label Grid.Column="0" Grid.Row="9" Text="Idiom" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="9" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="9" x:Name="lblIdiom" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="10"  ></Label>

                <Label Grid.Column="0" Grid.Row="11" Text="Platform" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="1" Grid.Row="11" Text=":" Style="{StaticResource labelStyle2}"></Label>
                <Label Grid.Column="2" Grid.Row="11" x:Name="lblPlatform" Style="{StaticResource labelStyle2}"></Label>

                <Label Grid.Column="0" Grid.Row="12"  ></Label>

